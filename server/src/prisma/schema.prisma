generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  googleId    String? @unique
  githubId    String? @unique
  firstName   String
  lastName    String
  username    String
  email       String   @unique
  phoneNumber String
  city        String
  country     String
  password    String
  avatar      String?
  createdAt   DateTime @default(now())
}
