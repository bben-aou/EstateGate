{
  "compilerOptions": {
    "target": "ESNext",                         // Specify ECMAScript target version
    "lib": ["DOM", "DOM.Iterable", "ESNext"],   // Specify library files to be included
    "jsx": "react-jsx",                         // Use React 17+ JSX transform
    "module": "ESNext",                         // Specify module code generation
    "moduleResolution": "node",                 // Type of module resolution to use
    "resolveJsonModule": true,                  // Include modules imported with .json extension
    "esModuleInterop": true,                    // Enable import/export interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                       // Skip type checking of declaration files
    "strict": true,                             // Enable all strict type checking options
    "forceConsistentCasingInFileNames": true,   // Ensure consistent casing in file names
    "isolatedModules": true,                    // Ensure each file is treated as a separate module
    "noEmit": true,                             // Do not emit outputs
    "allowJs": true,                            // Allow JavaScript files to be compiled
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@i18n/*": ["src/i18n/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@styles/*": ["src/styles/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["node", "react", "react-dom"]     // Add types for node, react, and react-dom
  },
  "include": ["src"],                           // Files to include in the project
  "exclude": ["node_modules", "dist"]           // Files to exclude from the project
}
